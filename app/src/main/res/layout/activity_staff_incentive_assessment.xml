                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textSize="17sp"
                android:gravity="center"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:text="Health Facility Staff Incentive Assessment"/>


            <!-- Question starts -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/siaNumStaffMembers"/>

            <TableLayout
                android:layout_width="match_parent"
                android:background="@drawable/table_defination"
                android:stretchColumns="1"
                android:layout_height="wrap_content">

                <TableRow
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorLightGrey"
                        android:text="@string/siaQ22018"
                        android:paddingRight="40dp"
                        android:paddingLeft="40dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:hint="write your number here.."
