                        android:text="@string/siaQ32018"
                        android:paddingRight="40dp"
                        android:paddingLeft="40dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
