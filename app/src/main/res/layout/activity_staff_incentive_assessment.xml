                </TableRow>

                <TableRow
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorLightGrey"
                        android:text="@string/siaQ32018"
                        android:paddingRight="40dp"
                        android:paddingLeft="40dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="10dip"
                        android:hint=".."/>

                </TableRow>

                <TableRow
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorLightGrey"
                        android:text="@string/siaQ42018"
                        android:paddingRight="40dp"
                        android:paddingLeft="40dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="15sp"
                        android:hint=".."/>

                </TableRow>

                <TableRow
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorLightGrey"
                        android:text="@string/siaQ12019"
                        android:paddingRight="40dp"
                        android:paddingLeft="40dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dip"
                        android:textSize="15sp"
                        android:hint=".."/>

                </TableRow>


            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/siaStaffVerified"/>

            <TableLayout
                android:layout_width="match_parent"
                android:background="@drawable/table_defination"
                android:stretchColumns="1"
                android:layout_height="wrap_content">

                <TableRow
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorLightGrey"
                        android:text="@string/siaQ22018"
                        android:paddingRight="40dp"
                        android:paddingLeft="40dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:padding="10dip"
                        android:hint="write your number here.."/>

                </TableRow>

                <TableRow
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
