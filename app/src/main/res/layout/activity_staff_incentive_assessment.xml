                        android:textSize="15sp"
                        android:gravity="start"
                        android:text="@string/soi2"/>
                </TableRow>

                <TableRow>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:paddingBottom="20dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:text="@string/soi3"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:paddingBottom="20dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:text="@string/soi4"/>
                </TableRow>

                <TableRow>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:paddingBottom="20dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:text="@string/soi5"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:paddingBottom="20dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:text="@string/soi6"/>
                </TableRow>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:paddingBottom="20dp"
                    android:lines="5"
                    android:textSize="15sp"
                    android:hint="@string/soilComment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:text="@string/soi7"/>

                <TableRow>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:paddingBottom="20dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:text="@string/soi8"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:paddingBottom="20dp"
                        android:paddingTop="5dp"
                        android:textSize="15sp"
                        android:gravity="start"
                        android:text="@string/soi9"/>
                </TableRow>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="5"
                    android:inputType="textMultiLine"
                    android:hint="@string/soilCommentUserFees"
                    android:textSize="15sp"/>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textSize="17sp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="Community Based Officer Assessment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="@string/siaConfirmReceipt"/>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radio_formal_receipt_invoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:weightSum="2">


                <RadioButton android:id="@+id/radio_yes_formal_receipt_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/optionYes"/>
                <!-- android:onClick="onRadioButtonClicked"/>-->

                <RadioButton android:id="@+id/radio_no_formal_receipt_invoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/optionNo"/>
                <!--  android:onClick="onRadioButtonClicked" -->

            </RadioGroup>





        </LinearLayout>



    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>